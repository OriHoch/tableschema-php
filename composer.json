{
    "name": "frictionlessdata/tableschema",
    "description": "A utility library for working with Table Schema",
    "license": "MIT",
    "require": {
        "php": ">=5.4",
        "justinrainbow/json-schema": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.35",
        "satooshi/php-coveralls": "^1.0",
        "psy/psysh": "@stable",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "frictionlessdata\\tableschema\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit --debug --bootstrap tests/autoload.php tests/ --coverage-clover coverage-clover.xml",
        "style-check" : "php-cs-fixer fix --dry-run --verbose --diff",
        "style-fix" : "php-cs-fixer fix --verbose"
    }
}
